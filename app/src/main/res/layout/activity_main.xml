<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.activity.activity.LoginActivity"
    android:background="#263238">
    <TextView
        android:id="@+id/txtHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Food Trucks"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#ffea00"/>
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/food_logo_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"/>
    <EditText
        android:id="@+id/etLoginId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:hint="Login Id or Phone number"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColorHint="#ffffff"
        android:inputType="text"/>
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etLoginId"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:hint="Password"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColorHint="#ffffff"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassword"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="#e65100"
        android:text="Login"
        android:textColor="#ffffff"
        android:textSize="27sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Yourself.."
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnLogin"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/txtForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Forgot Password? Click Here"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff"/>

</RelativeLayout>