<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.activity.activity.DetailsActivity"
    android:background="#263238">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/detToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"/>
    <RelativeLayout
        android:id="@+id/headRelative"
        android:layout_below="@+id/detToolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#b0bec5">
        <TextView
            android:id="@+id/txtChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_from_menu_listed_below"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <ImageView
            android:id="@+id/imgDetFav"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_heart_empty"
            android:layout_toRightOf="@+id/txtChoose"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/headRelative"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimary"/>
    <ScrollView
        android:id="@+id/scrollViewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headRelative"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="75dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerDetails"
            android:layout_margin="5dp"/>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/detProgressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#263238">
        <ProgressBar
            android:id="@+id/detProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btnProceedToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/proceed_to_cart"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:textColor="#ffffff"
        android:background="#e65100"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>