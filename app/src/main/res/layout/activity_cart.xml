<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263238"
    tools:context=".activity.activity.activity.CartActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/cartToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"/>
    <RelativeLayout
        android:id="@+id/relCart"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/cartToolbar">
        <TextView
            android:id="@+id/txtHeadCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Ordering From : "
            android:textSize="24sp"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/txtOrderingFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtHeadCart"
            android:padding="10dp"
            android:text="Baco Tell"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#ffea00"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relLine"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/relCart"
        android:background="@color/colorPrimary"/>
    <ScrollView
        android:id="@+id/scrollViewCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relLine"
        android:layout_marginTop="10dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerCart"
            android:layout_margin="5dp"/>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/cartProgressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#263238">
        <ProgressBar
            android:id="@+id/cartProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btnPlaceOrder"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:text="Place Order(Total: Rs. 420)"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="22sp"/>
</RelativeLayout>