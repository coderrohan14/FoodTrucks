<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#263238">

    <LinearLayout
        android:id="@+id/linLayHistory"
        android:layout_width="match_parent"
        android:background="#263238"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/txtRestaurantHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Pind Tadka"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="#00bcd4"/>
        <TextView
            android:id="@+id/txtRestaurantTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="6dp"
            android:text="Total : Rs.234"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#4caf50"/>
    <TextView
        android:id="@+id/txtDateHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_weight="2"
        android:text="17-12-19 at 11:37:53"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#ffd600"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerItems"
        android:layout_width="match_parent"
        android:layout_below="@+id/linLayHistory"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_below="@+id/RecyclerItems"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#d50000"/>

</RelativeLayout>